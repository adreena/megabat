extends layout

block content
	h1=title
	ul.errors
		if errors
			each error, i in errors
				li.alert.alert-danger #{error.msg}
	form(method='post', action='/notes/edit/#{note.id}', enctype="multipart/form-data")
		.form-group
			label Title:
			input.form-control(name='title', type='text', value = '#{note.subject}')
		.form-group
			label Body
			textarea.form-control(name='body', id='note-body', type='text') #{note.content}
		.form-group
			label Change Image:
			input.form-control(name='noteimage', type='file')
			
		input.btn.btn-default(name='submit',type='submit',value='Save')